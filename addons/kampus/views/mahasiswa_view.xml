<odoo>

    <!---Clender View -->
    <record id="mahasiswa_calendar_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.calendar.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <calendar string="Jadwal Sidang Mahasiswa" date_start="tgl_sidang" date_stop="tgl_sidang">
                <field name="name"/>
                <field name="nim"/>
            </calendar>
        </field>
    </record>
    <!-- Search View -->
    <record id="mahasiswa_search_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.search.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="nim"/>
                <group expand="0" string="Group By">
                    <filter name="tgl_sidang" context="
                    {'group_by':'tgl_sidang'}"/>
                </group>
            </search>
        </field>
    </record>
  

    <!-- Tree View -->
    <record id="mahasiswa_tree_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.tree.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nim"/>
                <field name="tgl_sidang"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="mahasiswa_form_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.form.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <form string="Mahasiswa">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nim"/>
                        <field name="tgl_sidang"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

      <!-- Action -->
    <record id="action_mahasiswa" model="ir.actions.act_window">
        <field name="name">Mahasiswa</field>
        <field name="res_model">mahasiswa</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

</odoo>

  