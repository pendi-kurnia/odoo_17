<odoo>
        <!-- Kanban View -->
    <record id="mahasiswa_kanban_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.kanban.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <kanban default_group_by='state'>
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="nim"/>
                 <field name="tgl_sidang"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('mahasiswa','image',record.id.raw_value)"/>
                            </div>
                        </div>
                            <div class="oe_kanban_details">
                             <div>
                                 <field name="name"/>
                             </div>
                             <div>
                                 <field name="nim"/>
                             </div>
                             <div>
                                 <field name="tgl_sidang"/>
                             </div>
                            </div>
                        </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!---Clender View -->
    <record id="mahasiswa_calendar_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.calendar.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <calendar string="Jadwal Sidang Mahasiswa" date_start="tgl_sidang" date_stop="tgl_sidang">
                <field name="name"/>
                <field name="nim"/>
            </calendar>
        </field>
    </record>
    <!-- Search View -->
    <record id="mahasiswa_search_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.search.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="nim"/>
                <group expand="0" string="Group By">
                    <filter name="tgl_sidang" context="
                    {'group_by':'tgl_sidang'}"/>
                </group>
            </search>
        </field>
    </record>
  

    <!-- Tree View -->
    <record id="mahasiswa_tree_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.tree.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nim"/>
                <field name="tgl_sidang"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="mahasiswa_form_view_id" model="ir.ui.view">
        <field name="name">mahasiswa.form.view</field>
        <field name="model">mahasiswa</field>
        <field name="arch" type="xml">
            <form string="Mahasiswa">
                <header>
                    <button string="Success" type="object"
                        name="button_success" class='oe_highlight'/>
                    <button string="Fail" type="object"
                        name="button_fail"/>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <group>                     
                        <field name="name"/>
                        <field name="nim"/>
                        <field name="tgl_sidang"/>
                    </group>
                    <group>
                         <field name="image" widget="image" nolable="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

      <!-- Action -->
    <record id="action_mahasiswa" model="ir.actions.act_window">
        <field name="name">Mahasiswa</field>
        <field name="res_model">mahasiswa</field>
        <field name="view_mode">tree,form,calendar,kanban</field>
    </record>

</odoo>

  